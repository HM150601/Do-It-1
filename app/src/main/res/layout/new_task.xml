<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <EditText
        android:id="@+id/newTaskText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:hint="@string/new_task" />

    <Button
        android:id="@+id/newTaskButton"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@id/newTaskText"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-23dp"
        android:layout_marginEnd="14dp"
        android:background="@android:color/transparent"
        android:text="@string/save"
        android:textAllCaps="false"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="63dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newTaskText"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="193dp"
        android:layout_toStartOf="@+id/newTaskButton"
        android:text="Alarm" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newTaskText"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="198dp"
        android:layout_toStartOf="@+id/newTaskButton"
        android:text="Hour" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="66dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newTaskText"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="77dp"
        android:layout_toStartOf="@+id/newTaskButton"
        android:text="Minute" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newTaskText"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="-44dp"
        android:layout_toStartOf="@+id/newTaskButton"
        android:text="Second" />

    <Spinner
        android:id="@+id/Hourspin"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newTaskText"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="166dp"
        android:layout_toStartOf="@+id/newTaskButton"
        android:entries="@array/Hourspin"
        android:text="0" />

    <Spinner
        android:id="@+id/Minutespin"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newTaskText"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="46dp"
        android:layout_toStartOf="@+id/newTaskButton"
        android:entries="@array/Minutespin" />

    <Spinner
        android:id="@+id/Secondspin"
        android:layout_width="101dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newTaskText"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="-82dp"
        android:layout_toStartOf="@+id/newTaskButton"
        android:entries="@array/Secondspinspin" />

</RelativeLayout>